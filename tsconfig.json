{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "libdefs/globals"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "shared/canUseDOM": ["./src/shared/canUseDOM.ts"],
      "shared/caretFromPoint": ["./src/shared/caretFromPoint.ts"],
      "shared/simpleDiffWithCursor": [
        "./src/shared/simpleDiffWithCursor.ts"
      ],
      "shared/invariant": ["./src/shared/invariant.ts"],
      "shared/warnOnlyOnce": ["./src/shared/warnOnlyOnce.ts"],
      "shared/environment": ["./src/shared/environment.ts"],
      "shared/useLayoutEffect": ["./src/shared/useLayoutEffect.ts"]
    }
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "logLevel": "Verbose"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  }
}
